{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/client/*"
            ],
            "@client/*": [
                "./src/client/*"
            ],
            "@shared/*": [
                "./src/shared/*"
            ]
        }
    },
    "include": [
        "src/client/**/*",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}